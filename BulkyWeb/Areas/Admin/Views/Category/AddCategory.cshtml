@model Category

@{
    ViewData["Title"] = "AddCategory"; 
}
<div class="card shadow border-0 my-4">
    <div class="card bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="border border-2 p-3">
                <form method="Post" asp-controller="Category" asp-action="AddCategory">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                        <label asp-for="DisplayOrder" class="control-label"></label>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="row p-0">
                        <div class="col-6 p-1">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                        <div class="col-6 p-1">
                            <a asp-asp-controller="Category" asp-action="Index" class="btn btn-secondary border-2 form-control">Back to List</a>
                        </div>
                        @* <div class="col-6 p-1">
                               <a asp-asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border-2 form-control">Back to List</a>
                           </div> *@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
    @{<partial name="_ValidationScriptsPartial"/> }
}
