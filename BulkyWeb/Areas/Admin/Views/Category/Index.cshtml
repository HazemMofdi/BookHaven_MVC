@model List<Category>




<div class="card shadow border-0 my-4">
	<div class="card bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Categories</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pt-4 pb-3">
			<div class="col-12 text-end">
				<a asp-controller="Category" asp-action="AddCategory" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Category</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">

			<thead>
				<tr class="text-center align-middle">
					<th>Category Name</th>
					<th>Display Number</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var cat in @Model.OrderBy(d => d.DisplayOrder))
				{
					<tr class="text-center align-middle">
						<td>@cat.Name</td>
						<td>@cat.DisplayOrder</td>
						<td>
							<div class="w-40 btn-group" role="group">
								<a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
							</div>
						</td>
						<td>
							<div class="w-40 btn-group" role="group">
								<a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger">
									<i class="bi bi-trash"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
