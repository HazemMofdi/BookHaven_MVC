@using Bulky.Models
@model Product

<div class="card shadow border-0 my-4">
    <div class="card bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="border border-2 p-3">
                <form asp-action="Delete" asp-controller="Product" method="post">
                    <input asp-for="Id" hidden />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Title" disabled class="form-control border-0 shadow" />
                        <label asp-for="Title" class="control-label"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <textarea asp-for="Description" disabled class="form-control border-0 shadow"></textarea>
                        <label asp-for="Description" class="control-label"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ISBN" disabled class="form-control border-0 shadow" />
                        <label asp-for="ISBN" class="control-label"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Author" disabled class="form-control border-0 shadow" />
                        <label asp-for="Author" class="control-label"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
                        <label asp-for="ListPrice" class="control-label"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" disabled class="form-control border-0 shadow" />
                        <label asp-for="Price" class="control-label"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price50" disabled class="form-control border-0 shadow" />
                        <label asp-for="Price50" class="control-label"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price100" disabled class="form-control border-0 shadow" />
                        <label asp-for="Price100" class="control-label"></label>
                    </div>
                    <div class="row p-2 mt-3 mb-3">
                        <div class="col-6 p-1">
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        </div>
                        <div class="col-6 p-1">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border-2 form-control">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}
